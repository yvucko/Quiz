{% extends 'base.html.twig' %}

{% block title %}Ajouter des réponses{% endblock %}

{% block body %}


<div class="container-fluid">
    <h1>Créer de nouvelles réponses</h1>
     {{ form_start(answersForm) }}
        {{ form_row(answersForm.quizQuestions, {
            'attr' : {'class':'form-control bg-lightblue border-lightblue text-green'},
            label: 'Question :'
        }) }}
        {{ form_row(answersForm.name, {
            'attr' : {'class':'form-control bg-lightblue border-lightblue text-green'},
            label: 'Nouvelle réponse :'
        }) }}
         
        {{ form_row(answersForm.expectedAnswer, {'attr': {'class': 'ml-4'}}) }}
        
        <button type="submit" class="btn btn-lg bg-lightblue border-lightblue text-green mt-3">
        Valider les changements</button>
        
    {{ form_end(answersForm) }}
    <a href="{{path('home')}}" class="btn btn-lg bg-lightblue border-lightblue text-green mt-3">
    Retour à la page principale</a>
    <a href="{{path('create_quiz')}}" class="btn btn-lg bg-lightblue border-lightblue text-green mt-3">
    Retour à la création de quiz</a>

    
</div>
{% endblock %}