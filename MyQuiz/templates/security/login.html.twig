{% extends 'base.html.twig' %}

{% block title %}MyQuiz - Connexion{% endblock %}

{% block body %}
<div class="container">
<div class="row d-flex justify-content-center">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mt-3 mb-4 font-weight-normal">Connectez-vous !</h1>
    <div class="row mb-2">
    <label for="inputEmail"></label>
    <input type="email" placeholder="Email" class="form-control bg-lightblue border-lightblue text-green"
    value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    </div>
    <div class="row">
    <label for="inputPassword"></label>
    <input class="form-control bg-lightblue border-lightblue text-green"
     type="password" placeholder="Mot de passe" name="password" id="inputPassword" class="form-control" required>
    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
<div class="row justify-content-center">
    <button class="bg-lightblue border-lightblue text-green mt-3 btn btn-lg btn-primary" type="submit">
        Connexion
    </button>
</div>
</form>
</div>
</div>
{% endblock %}
