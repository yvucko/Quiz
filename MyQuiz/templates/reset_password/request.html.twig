{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Réinitialiser le mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre email ici afin que nous vous envoyons un mail pour réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn bg-lightblue border-lightblue text-green btn-primary">Envoyer</button>
    {{ form_end(requestForm) }}
{% endblock %}